<h5 class="divisor"><%= __('share') %></h5>
        
<address class="social-icons">
    <% if (whatsapp) { %>
    <a 
        device-link
        class="icon" 
        target="_blank" 
        data-action="share/whatsapp/share"
        title="<%= __('shareon') %> whatsapp" 
        href='{ "mobile": "whatsapp://send?text=<%- whatsapp.message %>", "desktop": "https://web.whatsapp.com/send?text=<%- whatsapp.message %>" }'>
        <svg class="icon__svg">
            <use xlink:href="#whatsapp">
        </svg>
    </a>
    <% } %>

    <% if (facebook) { %>
    <a 
        class="icon" 
        target="_blank" 
        title="<%= __('shareon') %> facebook" 
        href="https://www.facebook.com/sharer.php?u=<%- facebook.url %>&t=<%- facebook.title %>">
        <svg class="icon__svg">
            <use xlink:href="#facebook">
        </svg>
    </a>
    <% } %>


    <% if (twitter) { %>
    <a 
        class="icon" 
        target="_blank" 
        title="twitter" 
        href="http://twitter.com/share?text=<%- twitter.text %>&url=<%- twitter.url %>&hashtags=<%- twitter.tags %>">
        <svg class="icon__svg">
            <use xlink:href="#twitter">
        </svg>
    </a>
    <% } %>


    <% if (linkedin) { %>
    <a 
        class="icon" 
        target="_blank" 
        title="<%= __('shareon') %> linkedin" 
        href="https://www.linkedin.com/shareArticle?mini=true&summary=<%- linkedin.summary %>&title=<%- linkedin.title %>&url=<%- linkedin.url %>">
        <svg class="icon__svg">
            <use xlink:href="#linkedin">
        </svg>
    </a>
    <% } %>
</address>